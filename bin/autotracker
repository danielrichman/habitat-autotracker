#!/usr/bin/python

import sys
import os.path

root = os.path.realpath(os.path.join(__file__, "../../"))

try:
    import habitat
except ImportError:
    # Assumes habitat and habitat_extensions have been cloned in the same parent
    # directory

    sys.path.append(os.path.join(os.path.dirname(root), "habitat"))
    import habitat

try:
    import autotracker
except ImportError:
    sys.path.append(root)

from habitat.utils.startup import launch
from autotracker.controller import AutoTracker
launch(AutoTracker)
